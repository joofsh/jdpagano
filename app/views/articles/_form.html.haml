.span10.offset2
  = form_for @article, html: {class: 'article-form', multipart: true} do |f|
    = f.label :title
    = f.text_field :title

    = f.label :description
    = f.text_field :description

    = f.label :keywords
    - @article.keywords.each do |k|
      = f.text_field :keywords, name: "#{f.object_name}[keywords][]", value: k

    = f.label :hero_image
    = f.file_field :hero_image

    = f.label :body
    = f.text_area :body


    = f.submit "Submit", class: 'btn btn-success'


