.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "/"}
        %h6.pull-left JD Pagano
      .nav-collapse.collapse
        %ul.nav.pull-right
          - Blog.all.each do |b|
            - if @blog.title != b.title
              %li
                = link_to "#{b.title} Blog", root_url(subdomain: b.subdomain)

          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Open Source
              %b.caret
            %ul.dropdown-menu
              %li
                %a{:href => "http://sql2ar.herokuapp.com", 'target' => '_blank'} SQL2AR
              %li
                %a{:href => "https://github.com/joofsh/geofsh", 'target' => "_blank"} Geofsh
              %li
                %a{:href => "https://github.com/joofsh/joofaq", 'target' => '_blank'} Joofaq
          - if current_user
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Admin
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to "New Article", new_article_path
                %li
                  = link_to "Articles Index", articles_path
                %li
                  = link_to "Logout", logout_path
